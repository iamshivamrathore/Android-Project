<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Screen2">

    <ImageView
        android:id="@+id/blackrock_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/ucd_image"
        app:layout_constraintStart_toStartOf="@+id/ucd_image"
        app:layout_constraintTop_toBottomOf="@+id/ucd_image"
        app:srcCompat="@drawable/blackrock_park" />

    <ImageView
        android:id="@+id/ucd_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ucd" />

    <Button
        android:id="@+id/button_ucd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="UCD"
        app:layout_constraintBottom_toBottomOf="@+id/ucd_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ucd_image"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_blackrock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLACKROCK"
        app:layout_constraintBottom_toBottomOf="@+id/blackrock_image"
        app:layout_constraintEnd_toEndOf="@+id/button_ucd"
        app:layout_constraintStart_toStartOf="@+id/button_ucd"
        app:layout_constraintTop_toTopOf="@+id/blackrock_image" />

</android.support.constraint.ConstraintLayout>